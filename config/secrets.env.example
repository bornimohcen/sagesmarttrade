# Copy this file to config/secrets.env and fill real values.
# Never commit real secrets. config/secrets.env is gitignored.

# --- Broker / Exchange ---
BROKER_API_KEY=your_broker_api_key
BROKER_API_SECRET=your_broker_api_secret
BROKER_BASE_URL=https://paper-api.example.com/v2

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Comma-separated list of allowed Telegram user IDs
TELEGRAM_ALLOWED_USER_IDS=12345678,23456789

# --- Ops / Mode ---
# Use ACTIVE for green-light; any other value causes startup_check to fail
ACCOUNT_STATUS=ACTIVE
ENV=dev

# Optional: HTTP proxy or timeouts
#HTTP_PROXY=
#HTTPS_PROXY=
#REQUEST_TIMEOUT_SECONDS=5

